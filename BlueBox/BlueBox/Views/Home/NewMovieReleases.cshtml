
@{
    ViewBag.Title = "NewMovieReleases";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie Releases</h2>

<br />


<div class="col-sm-12 col-md-12 col-lg-12">
    <div class="form-row">
        <div class="row" id="moviefilter">
            @*Adult Content*@
            <label class="form-check-label" style="margin-right:10px;">
                Adult Content:
            </label>
            <div class="col form-check">
                <input class="form-check-input" type="radio" name="adultContent" id="adultFalse" value="false" checked>
                <label class="form-check-label" for="adultFalse">
                    False
                </label>
            </div>
            <div class="col form-check">
                <input class="form-check-input" type="radio" name="adultContent" id="adultTrue" value="true">
                <label class="form-check-label" for="adultTrue">
                    True
                </label>
            </div>


        </div>
    </div>
    @*Search Button*@
    <div class="row-md-12 text-center">
        <button class="btn btn-primary" id="searchBtn" onclick="LoadNMReleases()">Search</button>
    </div>
</div>

    <br />

    @*Next and Previous Page Buttons*@
    <div class="row" id="paginationBtn">
        <div class="col-sm-4 text-center">
            <button class="btn" id="prevBtn" onclick="prevPage()">Prev Page</button>
        </div>
        <div class="col-sm-4 text-center">
            <h5 id="currentPage"></h5>
        </div>
        <div class="col-sm-4 text-center">
            <button class="btn" id="nextBtn" onclick="nextPage()">Next Page</button>
        </div>
    </div>

    <br />

</div>

<div class="col-sm-12 col-md-12 col-lg-12" id="newMovRel_Results">

        @*New Movie Releases Results*@

</div>

<div class="col-sm-12 col-md-12 col-lg-12">
    <br />
    @*Next and Previous Page Buttons*@
    <div class="row" id="paginationBtn">
        <div class="col-sm-4 text-center">
            <button class="btn" id="prevBtn" onclick="prevPage()">Prev Page</button>
        </div>
        <div class="col-sm-4 text-center">
            <h5 id="currentPage"></h5>
        </div>
        <div class="col-sm-4 text-center">
            <button class="btn" id="nextBtn" onclick="nextPage()">Next Page</button>
        </div>
    </div>

</div>


@section scripts{
    <script type="text/javascript" src="~/Scripts/MyScripts/NMR_Script.js"></script>
}
