<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Content/Images/BlueCube.png" type="image/x-icon" />
    <title>@ViewBag.Title - My BlueBox ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary fixed-top">
        <div class="container">
            <ul class="navbar-nav">
                <li class="nav-item active form-row">
                    <img src="~/Content/Images/BlueCube.png" alt="Blue Cube" style="width: 50px; height: 50px;" />
                    <a class="navbar-brand" href="/Home/Index" id="navBrand">BlueBox</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/NewMovieReleases">New Releases</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/About">About</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        <br />
        @RenderBody()
        <script>
            //Get Movie API Key
            var movieAPIKey = '@System.Web.Configuration.WebConfigurationManager.AppSettings["TheMovieDB_APIKey"]';
        </script>
        <hr />
        <div class="row">
            <div class="col-sm-10">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Daniel Tapia's BlueBox ASP.NET MVC Application</p>
                </footer>
            </div>
            <div class="col-sm-2">
                <img class="img-fluid" src="~/Content/Images/TheMovieDB.png" alt="Powered By: The Movie DB" id="movieDBLogo" />
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
